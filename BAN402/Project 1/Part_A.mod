# =============================================================================================================
# Define sets
# =============================================================================================================
set Locations;  # Set of locations
set Pollutants; # Set of pollutants

# =============================================================================================================
# Define parameters
# =============================================================================================================
param cost {Locations};                   # Cost per km^2 of using fertilizer at locations
param reduction {Locations, Pollutants};  # Reduction of pollutants at locations (tons)
param target {Pollutants};                # Minimum reduction of pollutants (tons)

# =============================================================================================================
# Define decision variable
# =============================================================================================================
var x {Locations} >= 0; # Amount of fertizilier used in locations can not be negative

# =============================================================================================================
# Objective function: Minimizing total costs
# =============================================================================================================
minimize Total_cost: # Min total costs function
	sum {l in Locations} cost[l]*x[l];

# =============================================================================================================
# Define constraints
# =============================================================================================================
#Fufill the requirements given by the government
subject to Pollution_reduction {p in Pollutants}:
sum {l in Locations} reduction[l,p] * x[l] >= target[p];


